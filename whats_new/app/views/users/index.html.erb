<div class="container mt-2 mx-1">
    <h1 class="text-center">Users</h1>
</div>

<body>
    <div class="container mt-4 mx-4">
        <table border="1" class="table table-secondary table-striped">
        <thead>
            <tr>
            <th>Name</th>
            <th>Last Name</th>
            <th>Email</th>
            <th>Amount of messages sent</th>
            <th>More Information</th>
            <th></th>
            </tr>
        </thead>
        <tbody>
            <% @users.each do |user| %>
            <tr>
                <td><%= user.first_name %></td>
                <td><%= user.last_name %></td>
                <td><%= user.email %></td>
                <td><%= user.messages.count %></td>
                <td><%= link_to 'View', user_path(user), class:"btn btn-success" %></td>
                <td><%= link_to 'Edit', edit_user_path(user), class:"btn btn-success" %></td>
            </tr>
            <% end %>
        </tbody>
        </table>
    </div>
    <div class="d-grid gap-2 col-6 mx-auto">
    <%= link_to 'New user', new_user_path, class:"btn btn-success" %>
    <p></p>
    </div>
</body>