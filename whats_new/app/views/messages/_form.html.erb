<%= form_with model: @message do |form| %>
  <div class="container mt-4 mx-4">
    <div>
      <%= form.label :chat_id, "Chat" %>
      <%= form.collection_select :chat_id, @chats, :id, ->(chat) {
      other_user = chat.sender == current_user ? chat.receiver : chat.sender
      "Chat with #{other_user.email}"
      } %>
    </div>
  
    <div>
      <%= form.label :body, "Message" %>
      <%= form.text_area :body, placeholder: "Write your message...", class: "form-control" %>
      <p>
      </p>
    </div>
  
    <div>
      <%= form.submit "Send", class:"btn btn-success" %>
      <%= link_to 'Back to index',messages_path, class: "btn btn-success" %>
    </div>
  </div>
<% end %>